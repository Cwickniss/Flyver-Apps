    <com.zerokol.views.JoystickView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginRight="50dp"
        android:id="@+id/joystickView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brandLogo"
        android:src="@drawable/flyver"
        android:layout_above="@+id/holdstart"
        android:layout_alignLeft="@+id/holdstart"
        android:layout_alignStart="@+id/holdstart" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Picture"
        android:id="@+id/takePicture"
        android:layout_alignTop="@+id/connectButton"
        android:layout_toLeftOf="@+id/connectButton"
        android:layout_toStartOf="@+id/connectButton" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/joystickView"
        android:layout_toRightOf="@+id/holdstart"
        android:layout_toEndOf="@+id/holdstart" />

