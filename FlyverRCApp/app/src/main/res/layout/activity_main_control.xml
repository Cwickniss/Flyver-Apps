        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/joystickView"
        android:layout_alignStart="@+id/joystickView"
        android:layout_alignBottom="@+id/emergencyStop"
        android:cropToPadding="false"
        android:focusable="false" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/emergency_btn_off"
        android:text="@string/emergency"
        android:id="@+id/emergencyStop"
        android:layout_marginRight="18dp"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/holdstart"
        android:layout_marginBottom="5dp" />
